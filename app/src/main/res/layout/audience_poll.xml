<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:barchart="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:padding="30dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/audience_poll_op1"
            android:visibility="gone"
            android:padding="10dp"
            android:textColor="@color/white"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/audience_poll_op2"
            android:padding="10dp"
            android:visibility="gone"
            android:textColor="@color/white"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/audience_poll_op3"
            android:padding="10dp"
            android:visibility="gone"
            android:textColor="@color/white"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/audience_poll_op4"
            android:padding="10dp"
            android:visibility="gone"
            android:textColor="@color/white"
            />
        <com.github.mikephil.charting.charts.BarChart
            android:id="@+id/barchart"
            android:layout_width="match_parent"
            android:outlineSpotShadowColor="@color/golden"
            android:outlineAmbientShadowColor="@color/golden"
            android:layout_height="200dp"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ok"
            android:layout_gravity="center"
            android:background="@drawable/correct_answer_button"
            android:id="@+id/okInAudienePoll"
            />
    </LinearLayout>
</LinearLayout>